# Path Settings
typeset -U ZDOTDIR
ZDOTDIR="$HOME/.config/zsh"
export ZDOTDIR

typeset -U FPATH fpath
fpath+="$ZDOTDIR/zfunc"
export FPATH fpath

typeset -U PATH path
path+="$HOME/.local/bin"
export PATH

typeset -U npm_config_prefix
npm_config_prefix="$HOME/.local"
export npm_config_prefix

# Websites
typeset -U ALARMPI
ALARMPI='{{ (keepassxc "RaspberryPi").URL }}'
export ALARMPI

# Default programs
typeset -U VISUAL EDITOR
VISUAL='/usr/bin/nvim'
EDITOR="$VISUAL"
export VISUAL EDITOR

typeset -U TERMINAL
TERMINAL='xterm-kitty'
export TERMINAL

typeset -U MANPAGER
MANPAGER="less -R --use-color -Dd+r -Du+b"
export MANPAGER

# Color settings
typeset -U LESSOPEN
LESSOPEN="| /usr/bin/source-highlight-esc.sh %s"
export LESSOPEN

typeset -U LESS
LESS=' -R '
export LESS

typeset -U LS_COLORS
eval $(dircolors)
