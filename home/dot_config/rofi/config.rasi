configuration {
	modi: "drun,run,ssh";
	show-icons: true;
	terminal: "wezterm";
	ssh-client: "ssh";
	run-shell-command: "{terminal} -e zsh -ic \"{cmd} && read\"";
	icon-theme: "Papirus-Dark";
  timeout {
      action: "kb-cancel";
      delay:  0;
  }
  filebrowser {
      directories-first: true;
      sorting-method:    "name";
  }
}
@theme "custom-theme"
