#!/bin/sh

set -x
# Installed Foreign Packages Hash {{ include "dot_config/packages/installed_foreign_pkgs.txt" | sha256sum }}
{{- if not .dev.no_pkg_sync }}
pkgs="$(cat {{ joinPath .chezmoi.sourceDir "dot_config/packages/installed_foreign_pkgs.txt" }} ~/.config/packages/pkglist_foreign.txt | sort | uniq -u)"

if [ -z "$pkgs" ]; then
    echo "Nothing to do"
    exit 0
fi

paru -S --needed $pkgs
{{- end }}
